
@Param
Feature: Login Functionality using parameterization
  Scenario: Validate the login functionality with valid credentials using param.
    Given The user is on the Login page
    When  The user enters valid "username" and "password"
    And   The user clicks on the login button
    Then  The user can see the dashboard



package StepDefinitions;

import io.cucumber.java.en.When;
import org.openqa.selenium.By;

import static StepDefinitions.LoginSD.driver;

public class LoginParamSD {
    @When("The user enters valid {string} and {string}")
    public void theUserEntersValidAnd(String username, String password)
    {
        driver.findElement(By.id("login-username")).sendKeys(username);
        driver.findElement(By.id("login-password")).sendKeys(password);
    }
}
